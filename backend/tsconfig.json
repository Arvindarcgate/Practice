{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "rootDir": "src",                  // where your .ts files are
    "outDir": "dist",  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"] // ✅ Add this
  },
  "include": ["src", "**/*.test.ts"], // ✅ Include test files
  "exclude": ["node_modules"]         // ✅ Don’t compile dependencies
}
